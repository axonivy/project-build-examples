<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.ivyteam.ivy.project.demo.ci</groupId>
	<artifactId>crm.integration.tests</artifactId>
	<version>6.1.0-SNAPSHOT</version>
	<packaging>iar</packaging>
	<organization>
		<name>AXON.IVY AG</name>
	</organization>
	
	<dependencies>
		<dependency>
			<!-- the project under test -->
			<groupId>ch.ivyteam.ivy.project.demo.ci</groupId>
			<artifactId>crm.tests</artifactId>
			<version>[6.1.0-SNAPSHOT,)</version>
			<type>iar</type>
		</dependency>
		<dependency>
			<!-- required: test framework used by the maven-surefire-plugin to run tests -->
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- required: for web browser based testing -->
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>2.48.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- optional: fluent testing API -->
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<version>3.2.0</version>
			<scope>test</scope>
		</dependency>
		
	</dependencies>
	
	<build>
		<!-- required: project-build-plugin must know where tests to build reside -->
		<testSourceDirectory>src_test</testSourceDirectory>
		
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>start.test.engine</id>
						<phase>pre-integration-test</phase>
						<configuration>
							<target>
								<echo>Starting AXON.IVY test engine</echo>
								<property name="test.engine.log" value="${project.build.directory}/testEngineOut.log"/>
								<parallel> 
							        <daemons>
										<java jar="${project.build.directory}/ivy.engine.classpath.jar" 
											dir="${engineDirectory}" output="${test.engine.log}"
											newenvironment="true" fork="true" maxmemory="2048m" />
									</daemons>
									<sequential>
										<waitfor maxwait="2" maxwaitunit="minute" 
											     checkevery="5" checkeveryunit="second" 
											     timeoutproperty="server.not.started">
											<resourcecontains resource="${test.engine.log}" 
												substring="is running and ready to serve"/>
										</waitfor>
									</sequential>
								</parallel>
								<echo>boot operation finished!</echo>
								
								<loadfile srcFile="${test.engine.log}" property="test.engine.url">
									<filterchain>
										<linecontainsregexp>
											<regexp id="port" pattern="http[s]?://(\S+)"/>
								        </linecontainsregexp>
										<tokenfilter>
										    <replaceregex pattern="(.*)(http[\S]+)(.*)" replace="\2" />
										</tokenfilter>
									</filterchain>
								</loadfile>
								
								<echo>engine started on: ${test.engine.url}!</echo>
							</target>
							<exportAntProperties>true</exportAntProperties>
						</configuration>
						<goals><goal>run</goal></goals>
					</execution>
				</executions>
			</plugin>
		
			<plugin>
				<groupId>com.axonivy.ivy.ci</groupId>
				<artifactId>project-build-plugin</artifactId>
				<version>6.1.0-SNAPSHOT</version>
				<extensions>true</extensions>
				<executions>
		        	<execution>
		        		<id>deploy.crm.under.test.to.memory.engine</id>
		        		<goals><goal>deploy-iar</goal></goals>
		        		<phase>pre-integration-test</phase>
		        		<configuration>
		        			<deployIarFile>${ch.ivyteam.ivy.project.demo.ci:crm:iar}</deployIarFile>
		        		</configuration>
		        	</execution>
		        </executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.19.1</version>
				<executions>
					<execution>
						<id>selenium.web.tests</id>
						<phase>integration-test</phase>
						<goals><goal>test</goal></goals>
						<configuration>
							<includes>
								<include>**/WebTest*.java</include>
							</includes>
							<argLine>-DengineUrl=${test.engine.url}</argLine>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.10</version>
                <executions>
                    <execution>
                    	<id>share.dependencies.as.property.for.iar.deployment</id>
                        <goals><goal>properties</goal></goals>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>
</project>
