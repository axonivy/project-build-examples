<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ch.ivyteam.ivy.project.demo.ci</groupId>
	<artifactId>crm.tests</artifactId>
	<version>6.2.0-SNAPSHOT</version>
	<packaging>iar</packaging>
	<parent>
		<groupId>ch.ivyteam.ivy.project.demo.ci</groupId>
		<artifactId>crm.maven.config</artifactId>
		<version>6.2.0-SNAPSHOT</version>
		<relativePath>../crm.maven/config</relativePath>
	</parent>

	<dependencies>
		<dependency>
			<!-- the project under test -->
			<groupId>ch.ivyteam.ivy.project.demo.ci</groupId>
			<artifactId>crm</artifactId>
			<version>[6.2.0-SNAPSHOT,)</version>
			<type>iar</type>
		</dependency>
		<dependency>
			<!-- required: test framework used by the maven-surefire-plugin to run tests -->
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<!-- optional: fluent testing API -->
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<version>3.2.0</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<!-- required: project-build-plugin must know where tests to build reside -->
		<testSourceDirectory>src_test</testSourceDirectory>

		<plugins>
			<plugin>
				<groupId>com.axonivy.ivy.ci</groupId>
				<artifactId>project-build-plugin</artifactId>
				<extensions>true</extensions>
			</plugin>
		</plugins>
	</build>
</project>
